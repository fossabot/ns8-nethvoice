{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":disableDependencyDashboard"
    ],
    "includePaths": [
        "build-images.sh",
	"freepbx/Containerfile" ,
	"tancredi/Containerfile"
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "build-images.sh"
            ],
            "matchStrings": [
                "ghcr\\.io\/nethesis\/nethvoice-cti:(?<currentValue>[^\\s|)]+)"
            ],
            "depNameTemplate": "ghcr.io/nethesis/nethvoice-cti",
            "datasourceTemplate": "docker"
        },
	    {
      "fileMatch": ["tancredi/Containerfile"],
      "matchStrings": [
        "BRANCH=(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "nethesis/tancredi",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "{{version}}"
    }
    ]
}
